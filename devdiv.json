{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:best-practices","helpers:pinGitHubActionDigestsToSemver"],
	"timezone": "America/Los_Angeles",
	"labels": ["dependencies"],
	"packageRules": [
		{
			"matchPackageNames": ["nbgv", "nerdbank.gitversioning"],
			"groupName": "nbgv and nerdbank.gitversioning updates"
		},
		{
			"matchPackageNames": [
				"NUnit*",
				"TUnit*",
				"xunit*",
				"Microsoft.Testing.Platform.MSBuild",
				"Microsoft.Testing.Extensions.*",
				"MSTest*"
			],
			"groupName": "Testing framework"
		},
		{
			"matchPackageNames": [
				"Microsoft.Build*"
			],
			"groupName": "MSBuild"
		},
		{
			"matchPackageNames": [
				"MessagePack",
				"MessagePack.*",
				"MessagePackAnalyzer"
			],
			"allowedVersions": "<3",
			"groupName": "MessagePack-CSharp"
		},
		{
			"matchPackageNames": ["System.ComponentModel.Composition"],
			"allowedVersions": "<2010.0"
		},
		{
			"matchDatasources": ["dotnet-version", "docker"],
			"matchDepNames": ["dotnet-sdk", "mcr.microsoft.com/dotnet/sdk"],
			"groupName": "Dockerfile and global.json updates"
		},
		{
			"matchPackageNames": ["*"],
			"allowedVersions": "!/-g[a-f0-9]+$/"
		}
	]
}
