{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Limits NuGet packages that ship alongside the .NET runtime to versions beneath major version <code>{{arg0}}</code>. Use this when targeting .NET (e.g. ServiceHub).",
	"extends": ["github>microsoft/vs-renovate-presets:group_dotnet_packages"],
	"packageRules": [
		{
			"matchPackageNames": [
				"Microsoft.Bcl.AsyncInterfaces",
				"System.Collections.Immutable",
				"System.Composition*",
				"System.Diagnostics.DiagnosticSource",
				"System.IO.Pipelines",
				"System.Reflection.Metadata",
				"System.Text.Json",
				"System.Threading.Tasks.Dataflow"
			],
			"allowedVersions": "<{{arg0}}.0"
		}
	]
}
